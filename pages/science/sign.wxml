<form bindsubmit='formSubmit'>	
	<view class="cu-form-group margin-top">
		<view class="title">头像</view>
		<view class="cu-avatar radius bg-gray" style='overflow:hidden;' bindtap="ChooseImage">
      <image src='https://img2018.cnblogs.com/blog/422101/201812/422101-20181204111004540-811571343.jpg' mode='aspectFill'></image>
    </view>
	</view>
	<view class="cu-form-group margin-top">
		<view class="title">姓名</view>
		<input name="name" placeholder="请输入您的姓名"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">身份证号</view>
		<input name="identity" placeholder="请输入您的身份证号"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">性别</view>
		<switch name="sex" class="switch-sex" checked></switch>
	</view>
	<view class="cu-form-group">
		<view class="title">手机号码</view>
		<input name="phoneNum" placeholder="请输入您的手机号码"></input>
		<view class="cu-capsule radius">
			<view class="cu-tag bg-blue">
				+86
			</view>
			<view class="cu-tag line-blue">
				中国大陆
			</view>
		</view>
	</view>
	<view class="cu-form-group">
		<view class="title">邮箱</view>
		<input name="email" placeholder="请输入您的邮箱"></input>
	</view>
	<view class="cu-form-group">
		<view class="title">详细地址</view>
		<input name="addr" placeholder="请输入详细地址"></input>
		<text class="cuIcon-locationfill text-orange"></text>
	</view>
	<view class="padding-xl">
		<button form-type='submit' class="cu-btn block bg-blue margin-tb-sm lg"><text class="cuIcon-loading2 iconfont-spin"></text> 加载</button>
	</view>
</form>

.tower-swiper .tower-item {
    transform: scale(calc(0.5 + var(--index) / 10));
    margin-left: calc(var(--left) * 100rpx - 150rpx);
    z-index: var(--index);
}
.card-swiper swiper-item{padding: 30rpx 0px 30rpx;}
swiper.card-swiper .wx-swiper-dot {
	width: 10rpx;
	height: 10rpx;
	position: relative;
    bottom: 20rpx;
	margin: 4rpx 8rpx !important;
    border-radius: 5rpx;
    background-color: #ffffff;
}
swiper.card-swiper .wx-swiper-dot.wx-swiper-dot-active::after {
	content: "";
	position: absolute;
	width: 10rpx;
	height: 10rpx;
	top: 0rpx;
	left: 0rpx;
	right: 0;
	margin: auto;
	background-color: #fff;
	border-radius: 5rpx;
}

swiper.card-swiper .wx-swiper-dot.wx-swiper-dot-active {
	width: 25rpx;
	height: 10rpx;
}